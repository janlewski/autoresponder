# Allegro OAuth2 credentials
ALLEGRO_CLIENT_ID=your_client_id
ALLEGRO_CLIENT_SECRET=your_client_secret
# Optional: for user-specific operations (messaging), provide refresh token
# If not provided, will try client credentials flow (limited to public resources)
ALLEGRO_REFRESH_TOKEN=
# production | sandbox
ALLEGRO_ENV=production
ALLEGRO_REDIRECT_URI=
PROCESS_ISSUES=true

# Polling config
POLL_INTERVAL=60
MAX_THREADS=5
MAX_ISSUES=5


# Business rules
BUSINESS_TZ=Europe/Warsaw
WORK_START_H=9
WORK_END_H=17
REPLY_AFTER_HOURS=true
REPLY_ONLY_FIRST=true


# Templates
TEMPLATE_AFTER_HOURS=
TEMPLATE_FIRST_CONTACT=
TEMPLATE_ISSUE=